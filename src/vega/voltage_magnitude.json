{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Scatter plot depicting voltage magnitudes.",
  "width": 500,
  "height": 300,
  "padding": 5,

  "data": [],

  "scales": [
  {
      "name": "xscale",
      "type": "point",
      "domain": {"data": "source", "field": "busname"},
      "range": "width",
      "padding": 1.05,
      "round": true
  },
  {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "source", "field": "voltage"},
      "domainMax": 1.2,
      "domainMin": 0.8,
      "range": "height",
      "padding": 0.05,
      "round": true
  }
  ],

  "axes": [
      { "orient": "bottom", "scale": "xscale", "title":"Buses", "grid":true},
      { "orient": "left", "scale": "yscale" , "title":"Voltage Magnitude", "grid":true}
  ],

  "marks": [
      {
        "name": "marks",
        "type": "symbol",
        "from": {"data": "source"},
        "encode": {
          "update": {
            "x": {"scale": "xscale", "field": "busname"},
            "y": {"scale": "yscale", "field": "voltage"},
            "shape": {"value": "circle"},
            "strokeWidth": {"value": 1},
            "opacity": {"value": 1.5},
            "stroke": {"value": "#4682b4"},
            "fill": {"value": "steelblue"}
          }
        }
      },
      {
        "name":"hline1",
        "type": "rule",
        "encode": {
          "enter": {
            "stroke": {"value": "#652c90"}
          },
          "update": {
            "x": { "value":0.0},
            "x2": {"value": 500 },
            "y": {"scale": "yscale", "value":0.95},
            "y2": {"scale": "yscale", "value":0.95},
            "strokeWidth": {"value": 2},
            "opacity": {"value": 1}
          }
        }
      },
      {
        "name":"hline2",
        "type": "rule",
        "encode": {
          "enter": {
            "stroke": {"value": "#652c90"}
          },
          "update": {
            "x": { "value":0.0},
            "x2": {"value": 500 },
            "y": {"scale": "yscale", "value":1.05},
            "y2": {"scale": "yscale", "value":1.05},
            "strokeWidth": {"value": 2},
            "opacity": {"value": 1}
          }
        }
      }
    ]
}
